<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUp"
        android:orientation="vertical" android:background="@android:color/white">

    <TextView android:layout_width="250dp"
              android:layout_height="50dp"
              android:text="User Sign Up"
              android:textSize="35sp"
              android:layout_gravity="center_horizontal"
              android:gravity="center"
              android:layout_marginTop="40dp" android:textColor="@android:color/black"/>

    <ImageView
            android:layout_width="140dp"
            android:layout_height="138dp"
            android:src="@drawable/login"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"

    />
    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="30dp"
              android:hint="Enter Your Email"
              android:inputType="text"
              android:id="@+id/signupemail"
    />
    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="20dp"
              android:hint="Enter Your Username"
              android:inputType="text"
              android:id="@+id/signupusername"

    />
    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="20dp"
              android:hint="Enter Your Password"
              android:inputType="textPassword"
              android:id="@+id/signuppassword"


    />
    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="20dp"
              android:hint="Confirm Your Password"
              android:inputType="textPassword"
              android:id="@+id/signupconfirmpassword"/>
    <Button android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Sign Up"
    android:textSize="24dp"
            android:id="@+id/signup"
    />

</LinearLayout>